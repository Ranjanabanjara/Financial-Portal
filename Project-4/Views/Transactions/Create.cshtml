@model Project_4.Models.Transaction

@{
    ViewBag.Title = "Create";
}
    <div class="row">
        <div class="col-lg-12">
            <div class="sparkline12-list shadow-reset mg-t-30">
                <div class="sparkline12-hd">
                    <div class="main-sparkline12-hd">
                        <h1>Create Transaction</h1>
                        <div class="sparkline12-outline-icon">
                            <span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
                            <span><i class="fa fa-refresh"></i></span>
                            <span class="sparkline12-collapse-close"><i class="fa fa-times"></i></span>
                        </div>
                    </div>
                </div>
                <div class="sparkline12-graph">
                    <div class="basic-login-form-ad">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="all-form-element-inner">

                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(m => m.OwnerId)
                                        <div class="form-group-inner">
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    @Html.LabelFor(model => model.BankAccountId, "BankAccount", htmlAttributes: new { @class = "login2 pull-right pull-right-pro col-lg-3" })

                                                </div>
                                                <div class="col-lg-8">
                                                    @Html.DropDownList("BankAccountId", null, htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.BankAccountId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group-inner">
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    @Html.LabelFor(model => model.BudgetItemId, "BudgetItem", htmlAttributes: new { @class = "login2 pull-right pull-right-pro col-lg-3" })

                                                </div>
                                                <div class="col-lg-8">
                                                    @Html.DropDownList("BudgetItemId", null, htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.BudgetItemId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group-inner">
                                            <div class="row">
                                                <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                                                    <label class="login2 pull-right pull-right-pro">TransactionType </label>

                                                </div>
                                                <div class="col-lg-8 col-md-6 col-sm-6 col-xs-12">
                                                    @Html.DropDownList("TransactionTypeId", null, htmlAttributes: new { @class = "form-control pull-left" })
                                                    @Html.ValidationMessageFor(model => model.TransactionTypeId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group-inner">
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "login2 pull-right pull-right-pro col-lg-3" })

                                                </div>
                                                <div class="col-lg-8">
                                                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group-inner">
                                            <div class="row">
                                                <div class="col-lg-3">
                                                    @Html.LabelFor(model => model.Memo, htmlAttributes: new { @class = "login2 pull-right pull-right-pro col-lg-3" })

                                                </div>
                                                <div class="col-lg-8">
                                                    @Html.EditorFor(model => model.Memo, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Memo, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                      
                                        <div class="row">
                                            <div class="col-lg-3"></div>
                                            <div class="col-lg-2">
                                                <div class="login-horizental cancel-wp pull-left">

                                                    <button class="btn btn-success btn-block" type="submit">Create</button>
                                                
                                                </div>
                                            </div>
                                        </div>


                                     


                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



