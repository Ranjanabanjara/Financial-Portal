@model IEnumerable<Project_4.Models.BudgetItem>
@using Microsoft.AspNet.Identity
@using Project_4.Models

@{
    ApplicationDbContext db = new ApplicationDbContext();
    ViewBag.Title = "Index";
    var userId = HttpContext.Current.User.Identity.GetUserId();
    var user = db.Users.Find(userId);
}

<!-- Data table area Start-->
<div class="admin-dashone-data-table-area pt">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="sparkline8-list shadow-reset">
                    <div class="sparkline8-hd">
                        <div class="main-sparkline8-hd">
                            <h1>All BudgetItems</h1>
                            <div class="sparkline8-outline-icon">
                                <span class="sparkline8-collapse-link"><i class="fa fa-chevron-up"></i></span>

                                <span class="sparkline8-collapse-close"><i class="fa fa-times"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="sparkline8-graph">
                        <div class="datatable-dashv1-list custom-datatable-overright">
                            <a href="@Url.Action("Create", "BudgetItems")">Add New</a>
                            <table id="dataTable" class="table-striped table-bordered" style="width:100%">

                                <thead>
                                    <tr class="tr1">

                                        <th>
                                            @Html.DisplayName("BudgetItem")
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Description)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.TargetAmount)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CurrentAmount)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Created)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Updated)
                                        </th>
                                        <th>
                                            Options
                                        </th>
                                    </tr>

                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr class="tr2">

                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TargetAmount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CurrentAmount)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Created)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Updated)
                                            </td>
                                            <td>
                                                
                                                @if (item.Budget.OwnerId == userId )
                                                {
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <br />

                                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })

                                                }

                                            </td>
                                        </tr>


                                    }
                                </tbody>

                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Data table area End-->
