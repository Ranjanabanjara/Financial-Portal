@model Project_4.Models.Household
    @{ 
        Layout = null;
    }

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />


    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />


    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <!--     Fonts and icons     -->
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.css" rel="stylesheet">

    <!-- CSS Files -->
    <link href="~/Css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/Contents/gsdk-bootstrap-wizard.css" rel="stylesheet" />

</head>

<body>
    <div class="image-container set-full-height" style="background-color:deepskyblue">

        <!--   Big container   -->
        <div class="container" style="padding:30px 30px 50px 30px">
            <div class="row">
                <h4 class="text-center">
                    You have successfuly created a Household. Next step is to setup your household..
                </h4>
                <div class="col-sm-offset-2 col-sm-8">


                    <!--      Wizard container        -->
                    <div class="wizard-container" style="padding-top:0px">

                        <div class="card wizard-card" data-color="orange" id="wizardProfile">
                            @using (Html.BeginForm("Setup", "Households", FormMethod.Post))
                            {
                           

                                <div class="wizard-header">
                                    <h3>
                                        <b>Set Up</b> Your Household <br>
                                        <small>Go through the steps below to create budget for your household.</small>
                                    </h3>
                                </div>

                                <div class="wizard-navigation">
                                    <ul class="nav nav-pills">
                                        <li>
                                            <a class="nav-link active" href="#about" data-toggle="tab" role="tab">
                                                1.  Bank Account
                                            </a>
                                        </li>
                                        <li>
                                            <a class="nav-link" href="#account" data-toggle="tab" role="tab">
                                                2. Budgets
                                            </a>
                                        </li>
                                        <li>
                                            <a class="nav-link" href="#address" data-toggle="tab" role="tab">
                                                3. BudgetItems
                                            </a>
                                        </li>

                                    </ul>

                                </div>

                                <div class="tab-content">
                                    <div class="tab-pane active" id="about">
                                        <h6 class="text-center">Create Bank Account</h6>
                                        <div class="row">
                                            <div class="col-sm-offset-1 col-sm-10">

                                                <div class="form-group">
                                                    <label for="exampleInput1" class="bmd-label-floating">Bank Account Name</label>
                                                    <input type="text" class="form-control" id="exampleInput1" name="BankAccount" required>
                                                </div>



                                                <div class="form-group">
                                                    <label for="exampleInput11" class="bmd-label-floating"></label>
                                                    <select class="selectpicker" data-style="select-with-transition" title="Single Select" data-size="7">
                                                        <option disabled selected>Select account type.</option>
                                                        <option value="2">Checking</option>
                                                        <option value="3">Savings</option>
                                                    </select>
                                                </div>



                                                <div class="form-group">
                                                    <label for="exampleInput1" class="bmd-label-floating">Starting Balance</label>
                                                    <input type="number" min="1" step="any" class="form-control" id="exampleemalil" name="StartingBalance" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="exampleInput1" class="bmd-label-floating">Low Balance Alert Level</label>
                                                    <input type="number" min="1" step="any" class="form-control" id="exampleemalil" name="LowBalanceLevel" required>
                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                    <div class="tab-pane" id="account">
                                        <h6 class="text-center">
                                            Create budget category and estimate budget for the same.
                                        </h6>
                                        <div class="row">
                                            <div class="col-sm-offset-1 col-sm-10">

                                                <div class="form-group">
                                                    <label for="exampleInput1" class="bmd-label-floating">Budget Category</label>
                                                    <input type="text" class="form-control" id="exampleemalil" name="Budget" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="exampleInput1" class="bmd-label-floating">Target Amount</label>
                                                    <input type="number" min="1" step="any" class="form-control" id="exampleemalil" name="Target" required>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="tab-pane" id="address">
                                        <h6 class="text-center">Create BudgetItem</h6>
                                        <div class="row">
                                            <div class="col-sm-offset-1 col-sm-10">
                                                <div class="form-group">
                                                    <label for="exampleInput1" class="bmd-label-floating">Budget</label>
                                                    <input type="text" class="form-control" id="exampleemalil" name="Budget" required>
                                                </div>
                                                <div class="form-group">
                                                    <label for="exampleInput1" class="bmd-label-floating">Target Amount</label>
                                                    <input type="number" min="1" step="any" class="form-control" id="exampleemalil" name="Target" required>
                                                </div>

                                            </div>

                                        </div>
                                    </div>

                                </div>
                                
                            
                               

                                <div class="wizard-footer height-wizard">
                                    <div class="pull-left">
                                        <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' value='Previous' />
                                    </div>
                                    <div class="pull-right">
                                        <input type='button' class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next' value='Next' />
                                        <input type='button' class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' name='finish' value='Finish'/>

                                    </div>

                                    <div class="clearfix"></div>
                                </div>

                          
                             }
                         </div>
                    </div> <!-- wizard container -->
                </div>
            </div><!-- end row -->
        </div> <!--  big container -->


    </div>
    <!--   Core JS Files   -->

    <script src="~/Scripts/jquery-2.2.4.min.js"></script>


    <script src="~/Css/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.bootstrap.wizard.js"></script>

    <!--  Plugin for the Wizard -->
    <script src="~/Scripts/gsdk-bootstrap-wizard.js"></script>

    <script src="~/Css/jquery.validate.min.js"></script>





    </body>



</html>


