@model UserProfileViewModel
@using Project_4.Models;
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.EntityFramework;
@using Project_4.Helpers;



<div class="row" style="padding-top:10px">
    <div class="col-md-12">
        <h2 class=" text-center text-danger">@ViewBag.StatusMessage</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-offset-1 col-lg-10">
        <div class="sparkline12-list shadow-reset mg-t-30">
            <div class="sparkline12-hd">
                <div class="main-sparkline12-hd">
                    <h1>Edit Personal Information</h1>
                    <div class="sparkline12-outline-icon">
                        <span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
                        <span><i class="fa fa-refresh"></i></span>
                        <span class="sparkline12-collapse-close"><i class="fa fa-times"></i></span>
                    </div>
                </div>
            </div>
            <div class="sparkline12-graph">
                <div class="basic-login-form-ad">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="all-form-element-inner">
                                @using (Html.BeginForm("MyProfile", "Manage", FormMethod.Post, new { style = "width:90%;", enctype="Multipart/form-data"}))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary("", new { @class = "text-danger" })




                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
                                                @Html.LabelFor(m => m.FirstName, new { @class = "login2 pull-right pull-right-pro" })

                                            </div>
                                            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">

                                                @Html.TextAreaFor(m => m.FirstName, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
                                                @Html.LabelFor(m => m.LastName, new { @class = "login2 pull-right pull-right-pro" })

                                            </div>
                                            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">

                                                @Html.TextAreaFor(m => m.LastName, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12">
                                                @Html.LabelFor(m => m.DisplayName, new { @class = "login2 pull-right pull-right-pro" })

                                            </div>
                                            <div class="col-lg-8 col-md-8 col-sm-6 col-xs-12">

                                                @Html.TextAreaFor(m => m.DisplayName, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group-inner">
                                        <div class="row">
                                            <div class="col-lg-1"></div>
                                            
                                            <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12">
                                                <a href="#" title="Choose file">

                                                    <img src="@Model.AvatarPath" width="100" class="img-circle" />

                                                </a>

                                            </div>
                           
                                            <div class="col-lg-1 col-md-8 col-sm-6 col-xs-6">

                                                <span> <i class="fa fa-user"></i> @Html.TextBox("Avatar", null, new { type = "file", name = "Avatar" })</span>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12"></div>

                                        <div class="col-lg-1 col-md-1 col-sm-2 col-xs-2">
                                            <div class="login-horizental cancel-wp pull-left">

                                                <button class="btn btn-danger" type="submit">Save Changes</button>

                                            </div>
                                        </div>


                                    </div>




                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row" style="padding-bottom:40px">
    <div class="col-lg-offset-1 col-lg-10">
        <div class="sparkline12-list shadow-reset mg-t-30">
            <div class="sparkline12-hd">
                <div class="main-sparkline12-hd">
                    <h1>Change Password</h1>
                    <div class="sparkline12-outline-icon">
                        <span class="sparkline12-collapse-link"><i class="fa fa-chevron-up"></i></span>
                        <span class="sparkline"><i class="fa fa-refresh"></i></span>
                        <span class="sparkline12-collapse-close"><i class="fa fa-times"></i></span>
                    </div>
                </div>
            </div>
            <div class="sparkline12-graph">
                <div class="basic-login-form-ad">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="all-form-element-inner">

                                @Html.Partial("_ChangePassword", new ChangePasswordViewModel())

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>